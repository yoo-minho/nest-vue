generator client {
  provider = "prisma-client-js"
}

generator erd {
  provider = "prisma-erd-generator"
  output   = "./ERD.png"
  theme    = "neutral"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id     Int     @id @default(autoincrement())
  email  String  @unique
  name   String?
  groups Group[]
}

model Group {
  id        Int            @id @default(autoincrement())
  domain    String         @unique
  name      String?
  published Boolean?       @default(false)
  createrId Int            @unique
  createdAt DateTime       @default(now())
  creater   User           @relation(fields: [createrId], references: [id])
  counts    Count?
  links     LinksOnGroups?
  tags      TagOnGroups?
}

model Count {
  id      Int    @id @default(autoincrement())
  date    String @unique
  count   Int
  groupId Int    @unique
  Group   Group  @relation(fields: [groupId], references: [id])
}

model Link {
  id     Int             @id @default(autoincrement())
  url    String          @unique
  name   String?
  groups LinksOnGroups[]
  posts  Post[]
}

model LinksOnGroups {
  groupId    Int      @unique
  linkId     Int
  assignedAt DateTime @default(now())
  group      Group    @relation(fields: [groupId], references: [id])
  link       Link     @relation(fields: [linkId], references: [id])

  @@id([groupId, linkId])
}

model Tag {
  id     Int           @id @default(autoincrement())
  name   String        @unique
  groups TagOnGroups[]
}

model TagOnGroups {
  groupId    Int      @unique
  tagId      Int
  assignedAt DateTime @default(now())
  group      Group    @relation(fields: [groupId], references: [id])
  link       Tag      @relation(fields: [tagId], references: [id])

  @@id([groupId, tagId])
}

model Post {
  id      Int     @id @default(autoincrement())
  title   String  @unique
  content String?
  linkId  Int
  link    Link    @relation(fields: [linkId], references: [id])
}
