generator client {
  provider = "prisma-client-js"
}

generator erd {
  provider = "prisma-erd-generator"
  output   = "./ERD.png"
  theme    = "neutral"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id     String  @id @unique
  email  String  @unique
  name   String
  groups Group[]
}

model Group {
  id          Int             @id @default(autoincrement())
  domain      String          @unique
  published   Boolean?        @default(false)
  createrId   String
  createdAt   DateTime        @default(now()) @db.Timestamptz(3)
  description String?
  title       String
  creater     User            @relation(fields: [createrId], references: [id])
  counts      Count[]
  links       LinksOnGroups[]
  tags        TagsOnGroups[]
}

model Count {
  date    String
  count   Int
  beforeCount Int
  groupDomain String
  Group   Group  @relation(fields: [groupDomain], references: [domain])

  @@id([groupDomain, date])
}

model Link {
  id          Int             @id @default(autoincrement())
  url         String          @unique
  description String?
  imagePath   String?
  rssUrl      String?
  title       String
  type        String
  groups      LinksOnGroups[]
  posts       Post[]
}

model LinksOnGroups {
  groupId    Int
  linkId     Int
  assignedAt DateTime @default(now()) @db.Timestamptz(3)
  group      Group    @relation(fields: [groupId], references: [id])
  link       Link     @relation(fields: [linkId], references: [id])

  @@id([groupId, linkId])
}

model Tag {
  id     Int            @id @default(autoincrement())
  name   String         @unique
  groups TagsOnGroups[]
}

model TagsOnGroups {
  groupId    Int
  tagId      Int
  assignedAt DateTime @default(now()) @db.Timestamptz(3)
  group      Group    @relation(fields: [groupId], references: [id])
  tag        Tag      @relation(fields: [tagId], references: [id])

  @@id([groupId, tagId])
}

model Post {
  id      Int     @id @default(autoincrement())
  title   String  @unique
  content String?
  linkId  Int
  link    Link    @relation(fields: [linkId], references: [id])
}
